    <script>
        const wishes = ["You are a Star! â­", "Have the best day! ðŸŽ‰", "Love you loads! ðŸ’–", "Cake Time! ðŸ°", "Make a wish! ðŸŒ ", "Stay beautiful! ðŸŒ¸", "Smile! ðŸ˜Š", "Hugs! ðŸ’‹"];
        let count = 0;

        const interval = setInterval(() => {
            if(count > 40) {
                clearInterval(interval);
                showPortal();
                return;
            }
            const card = document.createElement('div');
            card.className = 'popup-wish';
            card.innerHTML = `<span>ðŸŽˆ</span> ${wishes[Math.floor(Math.random() * wishes.length)]}`;
            card.style.left = Math.random() * (window.innerWidth - 200) + 'px';
            card.style.top = Math.random() * (window.innerHeight - 100) + 'px';
            document.body.appendChild(card);
            count++;
        }, 200);

        function showPortal() {
            const p = document.getElementById('portal');
            p.style.transform = "translate(-50%, -50%) scale(1)";
            p.onclick = () => {
                document.querySelectorAll('.popup-wish').forEach(w => w.classList.add('suck-in'));
                p.style.transform = "translate(-50%, -50%) scale(30)";
                p.style.opacity = "0";
                setTimeout(() => window.location.href = "page3.html", 800);
            };
        }
    </script>
