    <meta charset="UTF-8">
    <title>The Celebration</title>
    <style>
        body { margin: 0; background: #000; overflow: hidden; font-family: 'Outfit', sans-serif; }
        .wish { position: absolute; color: white; white-space: nowrap; font-size: 1.2rem; pointer-events: none; transition: 0.1s linear; opacity: 0.7; }
        #portal { 
            position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); 
            width: 140px; height: 140px; background: white; border-radius: 50%; 
            display: flex; justify-content: center; align-items: center; cursor: pointer; 
            mix-blend-mode: difference; z-index: 100; font-weight: bold; text-align: center;
            box-shadow: 0 0 50px rgba(255,255,255,0.5); font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div id="portal">CLICK FOR<br>MY VOW</div>
    <script>
        const texts = ["Happy Birthday! ğŸ‚", "My Constant ğŸ’–", "Best Decision ğŸ’", "30/10/22 âœ¨", "Infinite Love â™¾ï¸", "Unforgettable ğŸŒ¹", "You are the Best ğŸ¥‡", "Cake for you! ğŸ°"];
        const elements = [];
        
        for(let i=0; i<50; i++) {
            const el = document.createElement('div');
            el.className = 'wish';
            el.innerText = texts[Math.floor(Math.random()*texts.length)];
            let x = Math.random() * window.innerWidth;
            let y = Math.random() * window.innerHeight;
            el.style.left = x + 'px'; el.style.top = y + 'px';
            document.body.appendChild(el);
            elements.push({el, x, y, currX: x, currY: y});
        }

        window.addEventListener('mousemove', (e) => {
            elements.forEach(p => {
                let dx = e.x - p.currX;
                let dy = e.y - p.currY;
                let dist = Math.sqrt(dx*dx + dy*dy);
                if(dist < 150) {
                    p.currX -= dx * 0.1;
                    p.currY -= dy * 0.1;
                }
                p.el.style.left = p.currX + 'px';
                p.el.style.top = p.currY + 'px';
            });
        });

        document.getElementById('portal').onclick = () => {
            document.body.style.transition = "1.5s";
            document.body.style.background = "white";
            setTimeout(() => window.location.href="page3.html", 800);
        };
    </script>
</body>
</html>
