<body>
    <div class="main-title">Happy Birthday! <br> ğŸ‚âœ¨</div>

    <script>
        const wishes = [
            "You are a Star! â­", "Have the best day ever! ğŸ‰", "Love you loads! ğŸ’–",
            "Cake is waiting! ğŸ°", "Make a wish! ğŸŒ ", "Stay beautiful! ğŸŒ¸",
            "Keep smiling! ğŸ˜Š", "To a great year! ğŸ¥‚", "Hugs and Kisses! ğŸ’‹"
        ];

        function createPopup() {
            const card = document.createElement('div');
            card.className = 'popup-wish';
            card.innerHTML = `<span>ğŸˆ</span> ${wishes[Math.floor(Math.random() * wishes.length)]}`;
            
            // Randomly place on screen
            const x = Math.random() * (window.innerWidth - 200);
            const y = Math.random() * (window.innerHeight - 100);
            
            card.style.left = x + 'px';
            card.style.top = y + 'px';
            
            document.body.appendChild(card);
            
            // Stop after 50 popups so it doesn't crash the phone/PC
            if(document.querySelectorAll('.popup-wish').length > 50) {
                clearInterval(popupInterval);
            }
        }

        const popupInterval = setInterval(createPopup, 300);
    </script>
